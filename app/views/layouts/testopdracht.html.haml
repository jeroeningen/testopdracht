<!DOCTYPE html>
%html
  %head
    %title
      Testopdracht
    - if raise request.url.include?("heroku.com")
      = include_stylesheets :common
      = include_javascripts :common
    - else
      = include_stylesheets "testopdracht", "jquery.fancybox-1.3.4"
      = include_javascripts "jquery-1.5.2", "jquery.fancybox-1.3.4", "rails", "application"
    - end
    = csrf_meta_tag
  %body
    %div#wrapper
      %div#header
        %div#logo
          = link_to(image_tag("logo.jpg"), root_path)
        %div#menu
          = render "layouts/menu"
      %div#content
        = yield
